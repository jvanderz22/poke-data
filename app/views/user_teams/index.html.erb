<h2> New Team </h2>
<%= form_for (UserTeam.new), html: { class: 'form-horizontal' } do |f| %>
   <div class="form-group">
    <%= f.label :name, "Name:", :class => "col-sm-2 control-label"  %>
    <%= f.text_field(:name) %>
  </div>

  <%= f.fields_for :pokemon do |ff| %>
    <div class="form-group">
      <%= ff.label :pokemon1, "Pokemon 1:", :class => "col-sm-2 control-label" %>
      <%= ff.text_field(:pokemon1) %>
    </div>

    <div class="form-group">
      <%= ff.label :pokemon2, "Pokemon 2:", :class => "col-sm-2 control-label"  %>
      <%= ff.text_field(:pokemon2) %>
    </div>

    <div class="form-group">
      <%= ff.label :pokemon3, "Pokemon 3:", :class => "col-sm-2 control-label"  %>
      <%= ff.text_field(:pokemon3) %>
    </div>

    <div class="form-group">
      <%= ff.label :pokemon4, "Pokemon 4:", :class => "col-sm-2 control-label"  %>
      <%= ff.text_field(:pokemon4) %>
    </div>

    <div class="form-group">
      <%= ff.label :pokemon5, "Pokemon 5:", :class => "col-sm-2 control-label"  %>
      <%= ff.text_field(:pokemon5) %>
    </div>

    <div class="form-group">
      <%= ff.label :pokemon6, "Pokemon 6:", :class => 'col-sm-2 control-label' %>
      <%= ff.text_field(:pokemon6) %>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-2">
      <%= f.submit "Submit" %>
    </div>
  </div>
<% end %>
